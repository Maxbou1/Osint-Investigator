{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Claim",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "statement": {
      "type": "string"
    },
    "entityIds": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "collectedAt": {
      "type": "string",
      "format": "date-time"
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string"
        },
        "robotsOk": {
          "type": "boolean"
        }
      },
      "required": [
        "source",
        "robotsOk"
      ]
    }
  },
  "required": [
    "id",
    "statement",
    "collectedAt",
    "provenance"
  ]
}